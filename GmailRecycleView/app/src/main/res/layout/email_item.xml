<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_star_border" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Lorem ipsum"
        android:layout_toEndOf="@id/txt_letter"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/image_favorite"
        android:layout_toEndOf="@id/txt_letter"
        android:layout_below="@id/txt_name"
        android:layout_marginStart="16dp"
        android:singleLine="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_subject"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/image_favorite"
        android:layout_toEndOf="@id/txt_letter"
        android:singleLine="true"
        android:text="Hello World Hello World Hello World Hello World"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="4:20 AM"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_letter"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:background="@drawable/round_background"
        android:gravity="center"
        android:text="Z"
        android:textColor="#FFF"
        android:textSize="40sp" />
</RelativeLayout>